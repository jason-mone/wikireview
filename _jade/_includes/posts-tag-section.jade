section.tag-section
	div
		| {% for post in post-id.source %}  
		a(rel="nofollow", href="{{post-id.source-link}}", target="_blank")
			iron-icon(icon="notification:ondemand-video")
			span &nbsp; {{ post }}
		| ,
		| {% endfor %}
		| {% for post in page.tags %}  
		a(href="{{site.url}}{{site.baseurl}}/tag/{{ post | downcase | replace:' ','_'}}")
			span &nbsp; {{ post }}
			iron-icon(icon="icons:loyalty")
		| {% if forloop.last %}{% else %}, {% endif %}{% endfor %}
